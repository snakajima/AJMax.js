<a:skin xmlns:a="http://ajax.org/2005/aml">
<a:img name="img">
    <a:style><![CDATA[
		.img{
			overflow: auto;
		}

        .img div {
			width : 100%;
			height : 100%;
			display: -moz-box;
			display: -webkit-box;
			-moz-box-orient: horizontal;
			-webkit-box-orient: horizontal;
			box-orient: horizontal;
			-moz-box-pack: center;
			-webkit-box-pack: center;
			box-pack: center;
			-moz-box-align: center;
			-webkit-box-align: center;
			box-align: center;
        }
        
        .img IMG {
			display: block;
        }
		
		.img span{
			display:block;
		}
    ]]></a:style>

    <a:presentation>
        <a:main image="div/span/img/@src">
            <div class="img">
				<div>
                	<span><img src="" /></span>
				</div>
            </div>
        </a:main>
    </a:presentation>
</a:img>
</a:skin>