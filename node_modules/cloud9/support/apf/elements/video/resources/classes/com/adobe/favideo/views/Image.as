m.adobe.favideo.views.Image extends BaseView {// Private Properties:	private var image:MovieClip;	private var loaded:Boolean;	private var loader:MovieClipLoader; //Use MovieClipLoader, since UIManager already useses it.	private var __width:Number;	private var __height:Number;	// Initialization:	public function Image() { }	public function onLoad() { configUI(); } 	// Public getter / setters:	public function set visible(value:Boolean):Void {		_visible = value;	}	public function get visible():Boolean {		return _visible;	}	// Public methods:	public function load(path:String):Void {		if (loader == null) { configUI(); }		clear();		loader.loadClip(path, image);		visible = true;	}		public function clear():Void {		if (!loader) { configUI(); }		loader.unloadClip(image);		loaded = false;	}		public function setSize(width:Number, height:Number):Void {		if (loaded) {			image._width = width;			image._height = height;		}				__width = width;		__height = height;	}	// Private methods:		private function onLoadInit(target:MovieClip):Void {		loaded = true;		setSize(__width, __height);	}		private function configUI():Void {		loader = new MovieClipLoader();		loader.addListener(this);	}}