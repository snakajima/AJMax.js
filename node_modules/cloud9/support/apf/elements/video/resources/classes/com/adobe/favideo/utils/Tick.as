.utils.Delegate;class com.adobe.favideo.utils.Tick extends BaseView {// Private Properties:	private var tickDelegate:Function;	// Initialization:	public function Tick() { super(); }	private function onLoad() { configUI(); }	// Public methods:	public function stop():Void {		delete onEnterFrame;	}		public function start():Void {		onEnterFrame = tickDelegate;	}	// Private methods:	private function sendTick(event:Object):Void {		dispatchEvent({type:'tick'});	}		private function configUI():Void {		tickDelegate = Delegate.create(this, sendTick);		start();	}}